<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/toolbar_height"
    android:layout_marginLeft="@dimen/header_screen_edge_margin"
    android:layout_marginRight="@dimen/header_screen_edge_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/categorySettingIconImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/categorySettingTitleView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            android:textColor="@color/blue"
            android:textSize="@dimen/category_subtitle_font_size"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/blue"/>

</LinearLayout>