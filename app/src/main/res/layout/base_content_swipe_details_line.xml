<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentSwipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:paddingBottom="0dp">

        <RelativeLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp">

        </RelativeLayout>

    </LinearLayout>

    <fragment android:name="com.voudeonibus.views.components.NotificationFragment"
        android:id="@+id/fragment_notification"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_marginTop="90dp"
        android:layout_height="match_parent"/>

    <fragment android:name="com.voudeonibus.views.components.LoadingFragment"
        android:id="@+id/fragment_loading"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment android:name="com.voudeonibus.views.components.ChoiceCategoryFragment"
        android:id="@+id/fragment_choise_category"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment android:name="com.voudeonibus.views.components.CategoryTutorialFragment"
        android:id="@+id/fragment_category_tutorial"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>