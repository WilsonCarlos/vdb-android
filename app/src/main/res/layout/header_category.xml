<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headerCategory"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >

    <LinearLayout
        android:id="@+id/wrapperEditNameCatory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp">

        <ImageView
            android:id="@+id/iconHeader"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/editNameCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:hint="Digite um nome"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-thin"
            android:textSize="@dimen/category_title_font_size"
            android:background="@null"/>

        <RelativeLayout
            android:id="@+id/wrapperIcEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_plus_float_button"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wrapperColorChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/sp_border_button_color">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_choose_color"/>

        <Button
            android:id="@+id/btnColoChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/category_color_font_size"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="@string/ct_setting_header_color"
            android:background="@null"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_back_arrow"/>

    </RelativeLayout>

</LinearLayout>